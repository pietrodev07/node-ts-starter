{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "jsxImportSource": "react",
    "moduleResolution": "Bundler",
    "paths": { "@/*": ["./src/*"] }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
